<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SuperHeroMainActivity"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView

            android:scaleType="centerCrop"
            android:id="@+id/superhero_image"
            android:layout_width="125dp"
            android:layout_height="150dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>
        <TextView

            tools:text="sssssssssss"
            android:layout_marginStart="10dp"
            android:id="@+id/superhero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/superhero_image"
            app:layout_constraintTop_toTopOf="@+id/superhero_image">

        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            tools:text="sssssssssss"
            android:id="@+id/superhero_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/superhero_name"
            app:layout_constraintTop_toBottomOf="@id/superhero_name">

        </TextView>
        <TextView
            android:id="@+id/superhero_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/superhero_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="sadasdasdasdasd">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>